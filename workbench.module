/**
 * Implements hook_menu().
 */
function workbench_menu() {
  $items = array();

  $items['admin/config/workbench'] = array(
    'title' => 'Workbench',
    'description' => 'Workbench',
    'page callback' => 'workbench_admin',
    'access arguments' => array('administer workbench'),
    'position' => 'right',
    'file' => 'workbench.admin.inc',
  );
  $items['admin/config/workbench/list'] = array(
    'title' => 'Workbench',
    'description' => 'Workbench tools and settings',
    'page callback' => 'workbench_admin',
    'access arguments' => array('administer workbench'),
    'type' => MENU_LOCAL_TASK,
    'weight' => -20,
    'file' => 'workbench.admin.inc',
  );
  return $items;
}

/**
 * Implements hook_permission()
 */
function workbench_permission() {
  $permissions = array(
    'administer workbench' => array(
      'title' => t('Administer Workbench settings'),
    ),
  );
  return $permissions;
}
